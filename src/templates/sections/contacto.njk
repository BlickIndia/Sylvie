    type: 'Feature',
    geometry: {
        type: 'Point',
        coordinates: [-99.2805605,19.3724787]
    },
    properties: {


        title:'Av Noche de Paz 14',
         description:'Huizachito, 05249 Ciudad de México, CDMX, Mexico',

          'marker-color': '#194F73',
          'marker-symbol': 'marker',
          'marker-size': 'large',
    }
}).addTo(map);

// Iterate over the featureLayer we've called "marker"
// and open its popup instead of clicking to trigger it.
marker.eachLayer(function(m) {
  m.openPopup();
});

$('.leaflet-control-attribution ').css('display','none');

</script>
