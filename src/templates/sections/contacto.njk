				    <input type="email" name="email" class="form-control" id="email" required>
				  </div>
				  <div class="form-group">
				    <label class="lato" for="mensaje">Mensaje</label>
				    <textarea class="form-control" name="message" id="message" required></textarea>
				  </div>
					<div class="form-message">
					</div>
					<button class="btn btn-contacto roman">Enviar</button>
					<div class="loader sylvie-loader">
						<div class="ball-pulse-sync">
							<div></div>
							<div></div>
							<div></div>
						</div>
					</div>
				</form>
			</div>
			<div class="col-sm-6">
				<div class="contact-text">
					<h4 class="lato">Datos de la escuela:</h4>
					<ul class="list-unstyled lato">
